@model HRMSProject.Models.VmEmployeeType

@{
    ViewData["Title"] = "Edit";
   
}

<div class="container-fluid">
    <h1>Edit Employee Type </h1>
   
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" asp-controller="EmployeeTypes">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="EmployeeTypeId" type="hidden" />
                <div class="form-group">
                    <label asp-for="EmployeeTypeName" class="control-label"></label>
                    <input asp-for="EmployeeTypeName" class="form-control" />
                    <span asp-validation-for="EmployeeTypeName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OverTimeAllowed" class="control-label"></label>
                    <select asp-for="OverTimeAllowed" class="form-control">
                        <option value="" selected>--Please Select--</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                    <span asp-validation-for="OverTimeAllowed" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

