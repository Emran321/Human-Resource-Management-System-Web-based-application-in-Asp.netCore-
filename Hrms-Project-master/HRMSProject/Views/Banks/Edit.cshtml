@model HRMSProject.Models.VmBank

@{
    ViewData["Title"] = "Edit";

}

<div class="container-fluid">
    <h1>Edit bank </h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" asp-controller="Banks">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="BankId" type="hidden" />
                <div class="form-group">
                    <label asp-for="BankName" class="control-label"></label>
                    <input asp-for="BankName" class="form-control" />
                    <span asp-validation-for="BankName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" style="margin-top:10px;" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

